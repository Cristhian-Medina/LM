extends include/template

block nav
  .logo__container
    a(href='index.html'): img(src='img/dibujo.svg', alt='logo lizzie store')
  menu.menu__container
    include includes/menu
  .user__container
    +icon_boton('#', 'Search.svg', 'buscar')
    +icon_boton('#', 'Buy.svg', 'carrito de compras')
    +icon_boton('#', 'User.svg', 'usuario')
block header
  figure.header__container
    each img in oferta
      img(src=img, alt='oferta')
block main
  .main__container
    each category in categories
      +category_link(category.url, category.image, category.alt, category.name)
